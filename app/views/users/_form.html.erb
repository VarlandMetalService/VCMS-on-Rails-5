<div class="well">
  <%= form_for @user do |f| %>

    <% if @user.errors.any? %>
      <div class="error_explanation bg-danger text-danger">
        <p><%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:</p>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="form-group<%= ' has-error' if @user.errors[:username].any? %>">
          <%= f.label :username, required_field_label('Username:'), class: 'control-label' %>
          <%= f.text_field :username, { class: 'form-control', required: 'required' } %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="form-group<%= ' has-error' if @user.errors[:employee_number].any? %>">
          <%= f.label :employee_number, required_field_label('Employee #:'), class: 'control-label' %>
          <%= f.number_field :employee_number, { class: 'form-control', required: 'required' } %>
        </div>
      </div>

    </div>
    <div class="row">

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="form-group<%= ' has-error' if @user.errors[:first_name].any? %>">
          <%= f.label :first_name, required_field_label('First Name:'), class: 'control-label' %>
          <%= f.text_field :first_name, { class: 'form-control', required: 'required' } %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="form-group<%= ' has-error' if @user.errors[:last_name].any? %>">
          <%= f.label :last_name, required_field_label('Last Name:'), class: 'control-label' %>
          <%= f.text_field :last_name, { class: 'form-control', required: 'required' } %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="form-group<%= ' has-error' if @user.errors[:suffix].any? %>">
          <%= f.label :suffix, 'Suffix:', class: 'control-label' %>
          <%= f.text_field :suffix, { class: 'form-control' } %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="form-group<%= ' has-error' if @user.errors[:initials].any? %>">
          <%= f.label :initials, required_field_label('Initials:'), class: 'control-label' %>
          <%= f.text_field :initials, { class: 'form-control', required: 'required' } %>
        </div>
      </div>

    </div>
    <div class="row">

      <div class="col-xs-12 col-sm-12 col-md-6">
        <div class="form-group<%= ' has-error' if @user.errors[:email].any? %>">
          <%= f.label :email, required_field_label('Email:'), class: 'control-label' %>
          <%= f.email_field :email, { class: 'form-control', required: 'required' } %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="form-group<%= ' has-error' if @user.errors[:pin].any? %>">
          <%= f.label :pin, required_field_label('Pin:'), class: 'control-label' %>
          <%= f.text_field :pin, { class: 'form-control', required: 'required' } %>
        </div>
      </div>

    </div>
    <div class="row">

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="form-group<%= ' has-error' if @user.errors[:background_color].any? %>">
          <%= f.label :background_color, 'Background Color:', class: 'control-label' %>
          <%= f.color_field :background_color, { class: 'form-control' } %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="form-group<%= ' has-error' if @user.errors[:text_color].any? %>">
          <%= f.label :text_color, 'Text Color:', class: 'control-label' %>
          <%= f.color_field :text_color, { class: 'form-control' } %>
        </div>
      </div>

    </div>
    <div class="row">

      <div class="col-xs-12<%= ' has-error' if @user.errors[:is_active].any? %>">
        <div class="checkbox">
          <label>
            <%= f.check_box :is_active %> Active?
          </label>
        </div>
      </div>

    </div>

    <%= f.submit nil, { class: 'btn btn-primary' } %>
    <%= link_to 'Cancel', users_path, class: 'btn btn-link' %>

  <% end %>
</div>