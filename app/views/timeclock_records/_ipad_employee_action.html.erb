<div class="col-12 col-sm-6 col-sm-offset-3" id="employee-action-screen">

  <p class="lead text-center"><strong class="employee-name">&name</strong></p>

  <div class="form-group">
    <button class="btn btn-block btn-lg btn-success start-work-button">
      <i class="fa fa-fw fa-wrench"></i> Start Work
    </button>
  </div>

  <div class="form-group">
    <button class="btn btn-block btn-lg btn-danger end-work-button">
      <i class="fa fa-fw fa-wrench"></i> End Work
    </button>
  </div>

  <div class="form-group">
    <button class="btn btn-block btn-lg btn-warning start-break-button">
      <i class="fa fa-fw fa-cutlery"></i> Start Break
    </button>
  </div>

  <div class="form-group">
    <button class="btn btn-block btn-lg btn-primary end-break-button">
      <i class="fa fa-fw fa-cutlery"></i> End Break
    </button>
  </div>

  <hr />

  <div class="form-group">
    <button class="btn btn-block btn-lg btn-default time-card-button">
      <i class="fa fa-fw fa-clipboard"></i> View Time Card
    </button>
  </div>

  <div class="form-group">
    <button class="btn btn-block btn-lg btn-default change-pin-button">
      <i class="fa fa-fw fa-th"></i> Change Pin
    </button>
  </div>

  <div class="form-group">
    <button class="btn btn-block btn-lg btn-default logout-button">
      <i class="fa fa-fw fa-ban"></i> Log Out
    </button>
  </div>

</div>