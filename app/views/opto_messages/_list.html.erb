<p><%= page_entries_info opto_messages %></p>

<div class="table-responsive">
  <table class="table table-bordered table-striped">
    <thead>
      <tr class="row m-0">
        <th class="d-inline-block col-2 text-center">Date/Time</th>
        <th class="d-inline-block col-1 text-center">Type</th>
        <th class="d-inline-block col-1 text-center">Dept</th>
        <th class="d-inline-block col-1 text-center">Lane</th>
        <th class="d-inline-block col-1 text-center">Station</th>
        <th class="d-inline-block col-1 text-center">Bbl #</th>
        <th class="d-inline-block col-1 text-center">S.O. #</th>
        <th class="d-inline-block col-1 text-center">Load</th>
        <th class="d-inline-block col-3">Message</th>
      </tr>
    </thead>
    <tbody>
      <% opto_messages.each do |o| -%>
        <tr class="row m-0">
          <td class="d-inline-block col-2 text-center"><%= o.message_at.strftime '%m/%d/%y %H:%M:%S' %></td>
          <td class="d-inline-block col-1 text-center"><%= o.message_name %></td>
          <td class="d-inline-block col-1 text-center"><%= department_name(o.department) %></td>
          <td class="d-inline-block col-1 text-center"><%= o.lane %></td>
          <td class="d-inline-block col-1 text-center"><%= o.station %></td>
          <td class="d-inline-block col-1 text-center"><%= o.barrel %></td>
          <td class="d-inline-block col-1 text-center"><%= o.shop_order %></td>
          <td class="d-inline-block col-1 text-center"><%= o.load %></td>
          <td class=" d-inline-block col-3">
            <%= format_line_breaks o.message %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="hidden-print">
  <%= will_paginate opto_messages, renderer: BootstrapPagination::Rails %>
</div>