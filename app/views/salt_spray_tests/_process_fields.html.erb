<tr class="nested-fields">
  <td>
    <%= f.label :name, class: 'mt-2 mb-0' %>
    <%= f.text_field :name, class: 'form-control' %>
  </td>
  <td>
    <%= f.label :thickness, class: 'mt-2 mb-0' %>
    <%= f.number_field :thickness, {step: 'any', class: 'form-control'} %>
  </td>
  <td>
    <%= f.label :dipping_time, class: 'mt-2 mb-0' %>
    <%= f.number_field :dipping_time, {class: 'form-control'} %>
  </td>
  <td>
    <%= f.label :note, class: 'mt-2 mb-0' %>
    <%= f.text_field :note, class: 'form-control' %>
  </td>
  <td>
    <%= link_to_remove_association '<i class="fa fa-close"></i>'.html_safe, f, class: 'btn btn-sm btn-mobile btn-danger' %>
  </td>
</tr>