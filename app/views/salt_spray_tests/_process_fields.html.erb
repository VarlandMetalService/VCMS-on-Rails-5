<tr class="nested-fields">
  <td>
    <%= f.label :chromate, class: 'mt-2 mb-0' %>
    <%= f.select :name, SaltSprayTest.options_for_chromates, {include_blank: true}, {class: 'form-control trigger-other'} %>
    <%= f.text_field :name, class: 'form-control mt-1 d-none', disabled: true %>
  </td>
  <td>
    <%= f.label :top_coat, class: 'mt-2 mb-0' %>
    <%= f.select :name, SaltSprayTest.options_for_top_coats, {include_blank: true}, {class: 'form-control trigger-other'} %>
    <%= f.text_field :name, class: 'form-control mt-1 d-none', disabled: true %>
  </td>
  <td>
    <%= f.label :thickness, class: 'mt-2 mb-0' %>
    <%= f.number_field :thickness, {step: 'any', class: 'form-control'} %>
  </td>
  <td>
    <%= link_to_remove_association '<i class="fa fa-close"></i>'.html_safe, f, class: 'btn btn-sm btn-mobile btn-danger' %>
  </td>
</tr>