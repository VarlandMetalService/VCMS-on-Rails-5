<div class="salt-spray-comments">
  <% salt_spray_test.comments.each do |comment| %>
      <div class="row">
        <div class="col-12 col-md-9 prevent-text-overflow comment-block">
          <span class="commenter-initials"><%= User.find(comment.created_by).initials %></span>
          <%= comment.content %><br />
          <% if comment.attachments.size > 0 %>
            <% comment.attachments.each do |a| %>
              <%= show_attachment(a) %> <br /><br />
            <% end %>
          <% end %>
        </div>
        <% if params[:on_archived] == 'false' %>
          <div class="col-md-3 d-none d-md-block pl-4">
            <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_comment_salt_spray_test_path(salt_spray_test, comment_id: comment.id), class: 'btn btn-sm btn-default' %>
            <%= link_to '<i class="fa fa-trash"></i>'.html_safe, delete_comment_salt_spray_test_path(salt_spray_test, comment_id: comment.id),  data: { confirm: 'Are you sure?' }, method: 'delete', class: 'btn btn-sm btn-danger' %>
          </div>
        <% end %>
      </div>
      <br />
  <% end %>
</div>
