<div class="row">
  <div class="col-12">
    <label><strong>Shop Order:</strong></label>
    <span><%= @salt_spray_test.salt_spray_part.shop_order_number %></span>
    <label class="ml-3"><strong>Load:</strong></label>
    <span><%= @salt_spray_test.salt_spray_part.load_number %></span>
    <label class="ml-3"><strong>Process:</strong></label>
    <span><%= @salt_spray_test.salt_spray_part.process %></span>
    <label class="ml-3"><strong>Sub:</strong></label>
    <span><%= @salt_spray_test.salt_spray_part.sub %></span>
  </div>
</div>
<div class="card bg-light">
  <div class="card-body">
    <%= form_with model: @salt_spray_test do |f| %>

      <% if @salt_spray_test.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@salt_spray_test.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @salt_spray_test.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-2">
          <div class="form-group">
            <%= f.label :date_on, class: 'form-control-label' %>
            <%= f.text_field :date_on, class: 'datepicker form-control', :value => (@salt_spray_test.date_on.blank? ? '' : @salt_spray_test.date_on.strftime('%m/%d/%Y')) %>
          </div>
          <div class="form-group">
            <%= f.label :put_on_by, class: 'form-control-label' %>
            <%= f.select :put_on_by, reporters_for_select, {include_blank: true}, {class: 'form-control'} %>
          </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-2">
          <div class="form-group">
            <%= f.label :date_with_white, class: 'form-control-label' %>
            <%= f.text_field :date_w_white, class: 'datepicker form-control', value: format_date(@salt_spray_test.date_w_white), disabled: @salt_spray_test.salt_spray_part.white_spec == 0 %>
          </div>
          <div class="form-group">
            <%= f.label :who_called_white, 'White spot reporter', class: 'form-control-label' %>
            <%= f.select :who_called_white, reporters_for_select, {include_blank: true}, {disabled: @salt_spray_test.salt_spray_part.white_spec == 0, class: 'form-control'} %>
          </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-2">
          <div class="form-group">
            <%= f.label :date_with_red, class: 'form-control-label' %>
            <%= f.text_field :date_w_red, class: 'datepicker form-control', value: format_date(@salt_spray_test.date_w_red), disabled: @salt_spray_test.salt_spray_part.red_spec == 0 %>
          </div>
          <div class="form-group">
            <%= f.label :who_called_red, 'Red spot reporter', class: 'form-control-label' %>
            <%= f.select :who_called_red, reporters_for_select, {include_blank: true}, {disabled: @salt_spray_test.salt_spray_part.red_spec == 0, class: 'form-control'} %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <div class="form-group">
            <br />
            <%= f.label :comments %><br />
            <%= f.text_area :comments %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <br />
        <%= f.submit 'Edit Salt Spray Test', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', salt_spray_tests_path, class: 'btn btn-link' %>
      </div>
    <% end %>
  </div>
</div>
