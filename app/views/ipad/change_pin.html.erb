<div class="col-12 col-sm-12" id="employee-pin-screen">

  <div class="row">
    <div class="col-12 col-sm-12">

      <p class="lead text-center">
        <strong class="employee-name"><%= @ipad_user.full_name %></strong>
        <br />
        Enter new PIN and click &ldquo;Enter&rdquo;:
      </p>

    </div>
  </div>

  <%= form_with model: @ipad_user do |f| %>
    <div class="row">
      <div class="col-sm-4"></div>
      <div class="col-12 col-sm-4 col-sm-offset-4">

        <div class="form-group employee-pin-error-container">
          <%= f.text_field :pin, {value: '', type: 'password', class: 'form-control text-center', id: 'employee-change-pin-field' , maxlength: 4, autofocus: true, readonly: true} %>
        </div>

      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-12 col-sm-4 col-sm-offset-4">

      <%= render 'keypad' %>

      <div class="row text-center">
        <div class="col-4"></div>
        <div class="col-4">
          <%= link_to '<i class="fa fa-times"></i> Cancel'.html_safe, '#', onclick: "history.back()", class: 'btn btn-danger' %>
        </div>
      </div>

    </div>
  </div>

</div>