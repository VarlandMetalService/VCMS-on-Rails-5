<div class="col-12 col-sm-12" id="employee-pin-screen">

  <div class="row">

    <div class="col-12 col-sm-12">
      <p class="text-center"><strong><%= @employee.full_name %></strong></p>
      <p class="lead text-center">
        Please enter your PIN and click &ldquo;Enter&rdquo;:
      </p>
    </div>

    <div class="col-4"></div>
    <div class="col-12 col-sm-4 col-sm-offset-4">
      <div class="form-group employee-pin-error-container">
        <input type="password"
                class="form-control text-center"
                maxlength="4"
                id="employee-pin-field"
                autofocus
                readonly />
      </div>
    </div>
    <div class="col-4"></div>
    <div class="col-4"></div>
    <div class="col-12 col-sm-4 col-sm-offset-3">
      <%= render 'keypad', class: 'mb-2' %>
      <div class="row text-center">
        <div class="col-3">
          <%= link_to '<i class="fa fa-fw fa-chevron-left"></i> Back'.html_safe, ipad_index_path, class: 'btn btn-default' %>
        </div>
        <div class="col-9">
          <%= link_to '<i class="fa fa-fw fa-clipboard"></i> View Time Card'.html_safe, timeclock_records_path(user_view: params[:employee_number]), class: 'btn btn-primary float-right' %>
        </div>
      </div>
    </div>

  </div>

</div>